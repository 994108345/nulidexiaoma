<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE cn.wzl.nulidexiaoma.dao.mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-cn.wzl.nulidexiaoma.dao.mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<cn.wzl.nulidexiaoma.dao.mapper namespace="com.mb.wzl.dao.IUserDao">

    <select id="selectUser" resultType="com.mb.wzl.entity.cn.wzl.nulidexiaoma.model.User" parameterType="String">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="selectUserByUsername" resultType="com.mb.wzl.entity.cn.wzl.nulidexiaoma.model.User" >
        SELECT * FROM
        USER
        WHERE USERNAME=#{username,jdbcType=VARCHAR}
        AND PASSWORD=#{password,jdbcType=VARCHAR}
    </select>

    <select id="testMoreParams" resultType="com.mb.wzl.entity.cn.wzl.nulidexiaoma.model.User">
        select * from USER
        where USERNAME=#{userName}
        or NAME IN
        <foreach collection="list" item="item" open="(" close=")" separator=",">
            #{item.name}
        </foreach>
    </select>

</cn.wzl.nulidexiaoma.dao.mapper>