            and ICON_NAME = #{id,jdbcType=VARCHAR}
        </if>
        <if test="sortid != null" >
            and SORTID = #{id,jdbcType=INTEGER}
        </if>
    </select>
    <!--批量查询-->
    <select id="selectList" resultMap="BaseResultMap">
        select * from menu
        where 1=1
        <if test="id != null" >
            and ID = #{id,jdbcType=INTEGER}
        </if>
        <if test="menuId != null" >
